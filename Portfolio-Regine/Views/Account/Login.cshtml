@{
    ViewBag.Title = "Login";
}
<style>
    body {
        margin: 0;
        padding: 0;
    }
</style>

<!-- Importing the Reflux Template CSS -->
<link rel="stylesheet" href="~/css/assets/css/templatemo-style.css" />

<!-- Login Page Wrapper -->
<div id="page-wraper" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
    <div style="background-color: rgba(255, 255, 255, 0.1); padding: 25px; border-radius: 8px; box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.1); width: 350px; text-align: center;">
        <h2 style="color: #fff; margin-bottom: 15px;">Login</h2>
        <form method="post">
            <div style="margin-bottom: 15px; text-align: left;">
                <label style="font-weight: bold; display: block; margin-bottom: 4px; color: #fff;">Email</label>
                <input type="email" name="email" required 
                       style="width: 100%; padding: 10px; border: 1px solid #fff; border-radius: 5px; font-size: 14px; background-color: transparent; color: #fff;" />
            </div>
            <div style="margin-bottom: 15px; text-align: left;">
                <label style="font-weight: bold; display: block; margin-bottom: 4px; color: #fff;">Password</label>
                <input type="password" name="password" required 
                       style="width: 100%; padding: 10px; border: 1px solid #fff; border-radius: 5px; font-size: 14px; background-color: transparent; color: #fff;" />
            </div>
            <button type="submit" 
                    style="width: 100%; padding: 12px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; background-color: #a43f49; color: white; margin-top: 10px;">
                Login
            </button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p style="color: red; font-size: 14px; margin-top: 10px;">@ViewBag.Error</p>
        }

        <a href="@Url.Action("Index", "Home")" 
           style="display: block; margin-top: 12px; text-decoration: none; color: #fff; font-size: 14px; text-transform: uppercase;">
            Back to Home
        </a>
    </div>
</div>
