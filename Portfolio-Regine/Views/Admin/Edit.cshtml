@{
    ViewBag.Title = "Admin";
}

@model Portfolio_Regine.Models.Project

<h2 style="text-align:center; margin-bottom:20px;">Edit Project</h2>

<div style="max-width:600px; margin:0 auto; border:1px solid #ddd; padding:20px; border-radius:5px; background-color:#f9f9f9;">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Title</label>
            <input type="text" asp-for="Title" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Category</label>
            <select asp-for="Category" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" required>
                <option value="">Select a category</option>
                <option value="website">Website</option>
                <option value="mobile app">Mobile App</option>
                <option value="game">Game</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Description</label>
            <textarea asp-for="Description" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Description (French)</label>
            <textarea asp-for="DescriptionFrench" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" required></textarea>
            <span asp-validation-for="DescriptionFrench" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Skills (comma-separated)</label>
            <input type="text" asp-for="Skills" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" required />
            <span asp-validation-for="Skills" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">Current Image</label>
            <div style="margin-top:5px;">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Project Image" style="width: 150px; height: auto; border-radius:4px; display:block; margin-bottom:10px;" />
                }
                else
                {
                    <p style="color:#888;">No image available</p>
                }
            </div>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label style="font-weight:bold; display:block; margin-bottom:5px;">New Image</label>
            <input type="file" name="image" class="form-control" style="width:100%; padding:8px; border:1px solid #ccc; border-radius:4px;" />
        </div>

        <div class="form-group" style="margin-top:20px; text-align:right;">
            <button type="submit" class="btn btn-success" style="background-color:#28a745; color:#fff; border:none; padding:10px 20px; border-radius:4px; cursor:pointer;">Save</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary" style="background-color:#6c757d; color:#fff; border:none; padding:10px 20px; border-radius:4px; text-decoration:none; margin-left:10px;">Cancel</a>
        </div>
    </form>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")

