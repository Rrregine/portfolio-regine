@model List<Testimonial>

<!-- Back to Admin Page Button -->
<a href="@Url.Action("Index", "Admin")" class="btn-back">⬅ Back to Admin Page</a>

<h2>Testimonials</h2>

<div class="container">
    <!-- Approved Testimonials Column -->
    <div class="column">
        <h3 class="approved-title">✅ Approved Testimonials</h3>
        @if (Model.Any(t => t.IsApproved))
        {
            @foreach (var testimonial in Model.Where(t => t.IsApproved))
            {
                <div class="testimonial-card approved">
                    <h4>@testimonial.Title</h4>
                    <h5>@testimonial.Name</h5>
                    <h5>@testimonial.Email</h5>
                    <p>@testimonial.Message</p>
                    <p class="date">📅 @testimonial.SubmittedAt.ToString("MMMM dd, yyyy")</p>

                    <form method="post" asp-action="Reject" asp-route-id="@testimonial.Id" onsubmit="return confirmDelete();">
                        <button type="submit" class="btn-delete">🗑 Delete</button>
                    </form>
                </div>
            }
        }
        else
        {
            <p class="no-testimonials">No approved testimonials available.</p>
        }
    </div>

    <!-- Unapproved Testimonials Column -->
    <div class="column">
        <h3 class="unapproved-title">⏳ Pending Testimonials</h3>
        @if (Model.Any(t => !t.IsApproved))
        {
            @foreach (var testimonial in Model.Where(t => !t.IsApproved))
            {
                <div class="testimonial-card unapproved">
                    <h4>@testimonial.Title</h4>
                    <h5>@testimonial.Name</h5>
                    <h5>@testimonial.Email</h5>
                    <p>@testimonial.Message</p>
                    <p class="date">📅 @testimonial.SubmittedAt.ToString("MMMM dd, yyyy")</p>

                    <div class="button-group">
                        <form method="post" asp-action="Approve" asp-route-id="@testimonial.Id" onsubmit="return confirmApprove();">
                            <button type="submit" class="btn-approve">✔ Approve</button>
                        </form>

                        <form method="post" asp-action="Reject" asp-route-id="@testimonial.Id" onsubmit="return confirmDelete();">
                            <button type="submit" class="btn-reject">❌ Reject</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="no-testimonials">No pending testimonials.</p>
        }
    </div>
</div>

<!-- Dark Mode Styling -->
<style>
    /* General Styles */
    body {
        background-color: #181818;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        margin: 20px 0;
        font-size: 28px;
        color: #ffffff;
    }

    /* Back Button */
    .btn-back {
        display: inline-block;
        background-color: #a43a49;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        transition: 0.3s;
        margin-bottom: 20px;
    }

    .btn-back:hover {
        background-color: #ff3838;
        transform: scale(1.05);
    }

    /* Layout */
    .container {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .column {
        width: 45%;
        min-width: 300px;
    }

    /* Section Titles */
    .approved-title {
        color: #4CAF50;
        text-align: center;
        font-size: 22px;
    }

    .unapproved-title {
        color: #a43a49;
        text-align: center;
        font-size: 22px;
    }

    /* Testimonial Cards */
    .testimonial-card {
        background-color: #222;
        padding: 20px;
        margin-bottom: 15px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
        transition: transform 0.2s, box-shadow 0.3s;
    }

    .testimonial-card:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 12px rgba(255, 255, 255, 0.2);
    }

    .approved {
        border-left: 6px solid #4CAF50;
    }

    .unapproved {
        border-left: 6px solid #a43f49;
    }

    h4 {
        margin: 0;
        font-size: 20px;
        color: #ffffff;
    }

    h5 {
        margin: 5px 0;
        font-size: 16px;
        color: #bdbdbd;
    }

    p {
        margin: 10px 0;
        color: #d9d9d9;
    }

    .date {
        font-size: 14px;
        color: #b0b0b0;
    }

    .no-testimonials {
        text-align: center;
        color: #b0b0b0;
        font-style: italic;
    }

    /* Button Group */
    .button-group {
        display: flex;
        gap: 10px;
    }

    /* Buttons */
    .btn-approve, .btn-reject, .btn-delete {
        padding: 8px 12px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-approve {
        background-color: #4CAF50;
        color: white;
    }

    .btn-approve:hover {
        background-color: #45a049;
        transform: scale(1.05);
    }

    .btn-reject {
        background-color: #FF5722;
        color: white;
    }

    .btn-reject:hover {
        background-color: #e64a19;
        transform: scale(1.05);
    }

    .btn-delete {
        background-color: #9E9E9E;
        color: white;
    }

    .btn-delete:hover {
        background-color: #757575;
        transform: scale(1.05);
    }
</style>

<!-- JavaScript for Confirmation Dialog -->
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this testimonial?");
    }

    function confirmApprove() {
        return confirm("Are you sure you want to approve this testimonial?");
    }
</script>
